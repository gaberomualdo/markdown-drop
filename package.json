{
  "name": "markdowndrop",
  "version": "1.0.0",
  "description": "Drag and drop a markdown file to view, print, or export to PDF.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mw"
  },
  "build": {
    "productName": "MarkdownDrop",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtrp/markdowndrop.git"
  },
  "author": "Gabriel Romualdo <xtrp@xtrp.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xtrp/markdowndrop/issues"
  },
  "homepage": "https://github.com/xtrp/markdowndrop#readme",
  "devDependencies": {
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "markdown-it": "^11.0.0"
  }
}
